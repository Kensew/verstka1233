<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Имя пользователя" Margin="0,10,0,5"/>
            <TextBox x:Name="usernameTextBox" Height="25"/>

            <TextBlock Text="Пароль" Margin="0,10,0,5"/>
            <PasswordBox x:Name="passwordBox" Height="25"/>
            <Button Content="Войти" Click="LoginButton_Click" Height="30" Width="315" />
            <Button Content="Войти как гость" Click="GuestButton_Click" Margin="0,10,0,0" Height="30" Width="317"/>
        </StackPanel>
    </Grid>

</Window>
